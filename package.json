{
    "name": "node-fullstack-template",
    "version": "1.0.0",
    "main": "dist/main.js",
    "repository": "",
    "author": "",
    "license": "MIT",
    "scripts": {
        "start": "cross-env NODE_ENV=production TS_NODE_BASEURL=./dist node -r tsconfig-paths/register dist/main.js",
        "dev": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/main.ts",
        "build": "yarn build:prettier && yarn build:cleanDist && yarn build:generateJavascript && yarn build:buildWeb && yarn build:copyFiles",
        "build:prettier": "yarn prettier --write .",
        "build:cleanDist": "node_modules/.bin/rimraf dist .next",
        "build:generateJavascript": "tsc -p .",
        "build:buildWeb": "next build",
        "build:copyFiles": "yarn copy-files-from-to"
    },
    "copyFiles": [],
    "copyFilesSettings": {
        "whenFileExists": "overwrite"
    },
    "dependencies": {
        "@nextui-org/react": "^2.4.8",
        "chalk": "4.1.2",
        "cross-env": "^7.0.3",
        "framer-motion": "^11.12.0",
        "fs": "^0.0.1-security",
        "next": "^15.0.3",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tsconfig-paths": "^4.2.0",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/node": "^22.10.1",
        "@types/react": "18.3.12",
        "autoprefixer": "^10.4.20",
        "copy-files-from-to": "^3.12.0",
        "postcss": "^8.4.49",
        "prettier": "3.4.1",
        "rimraf": "^6.0.1",
        "tailwindcss": "^3.4.15",
        "typescript": "^5.7.2"
    }
}
